<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iconInfo"
                android:src="@android:drawable/ic_dialog_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/winTittle"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_toEndOf="@id/iconInfo"
                android:text="@string/hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/magnitude"
                android:layout_toEndOf="@id/iconInfo"

                android:layout_below="@id/winTittle"
                android:text="@string/magnitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn"
                android:layout_toEndOf="@id/magnitude"
                android:layout_width="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_alignBottom="@id/magnitude"
                android:layout_height="wrap_content"
                android:text="more info"
                android:textColor="#DA346D"
                android:background="@android:color/transparent"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>